<h2>Listing contacts</h2>

<%= form_tag '/contacts/search', :method => :get do %>
    <%= text_field_tag :query, params[:query] %>
    <%= submit_tag "search", :name => :nil %>
<% end %>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
      <th>Address</th>
      <th>Phone number</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @contacts.each do |contact| %>
      <tr>
        <td><%= contact.first_name %></td>
        <td><%= contact.last_name %></td>
        <td><%= contact.email %></td>
        <td><%= contact.address %></td>
        <td><%= contact.phone_number %></td>
        <td><%= link_to 'Show', contact %></td>
        <td><%= link_to 'Edit', edit_contact_path(contact) %></td>
        <td><%= link_to 'Delete', contact, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<ul>
<%= link_to 'New Contact', new_contact_path %>
<%= link_to 'Sort Contact by Ascending Order', :controller => 'contacts_sorter',:action=>:index%>
<%= link_to 'Sort Contact by Descending order', {:controller => 'contacts_sorter', :action => :desc}%>
</ul>